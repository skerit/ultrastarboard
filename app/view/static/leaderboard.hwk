<% expands('layouts/body'); %>

<% start('main') %>

{% with players as player where player.rank eq 1 %}
	{% each %}
		<h1 class"pacifico">üèÜ {%= player.name %} staat op √©√©n met een UltraStar-score van {%= player.average %}!</h1>
	{% /each %}
{% /with %}

<div class="board">

	<table>
		<thead>
			<tr>
				<th></th>
				<th></th>
				<th>AVERAGE</th>
				<th>SONGS</th>
				<th>MAX</th>
				<th>MIN</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% with players as player where player.rank lt 7 %}
				{% each %}
					<tr>
						<td class="rank"><span>{%= player.rank %}</span></td>
						<td class="pacifico player-name" >{%= player.name %}</td>
						<td>{%= player.average %}</td>
						<td>{%= player.scores.length %}</td>
						<td>{%= player.max %}</td>
						<td>{%= player.min %}</td>
					</tr>
					<tr>
						<td>
						</td>
						<td colspan="5" class="small">
							{%= player.last.timeAgo() %}
						</td>
					</tr>
				{% /each %}
			{% /with %}
		</tbody>
	</table>

	<table>
		<thead>
			<tr>
				<th></th>
				<th></th>
				<th>AVERAGE</th>
				<th>SONGS</th>
				<th>MAX</th>
				<th>MIN</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% with players as player where player.rank gt 6 and player.rank lt 13 %}
				{% each %}
					<tr>
						<td class="rank"><span>{%= player.rank %}</span></td>
						<td class="pacifico player-name">{%= player.name %}</td>
						<td>{%= player.average %}</td>
						<td>{%= player.scores.length %}</td>
						<td>{%= player.max %}</td>
						<td>{%= player.min %}</td>
					</tr>
					<tr>
						<td>
						</td>
						<td colspan="5" class="small">
							{%= player.last.timeAgo() %}
						</td>
					</tr>
				{% /each %}
			{% /with %}
		</tbody>
	</table>
</div>

<% end('main') %>