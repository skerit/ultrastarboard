<% expands('layouts/body'); %>

<% start('main') %>

{% if not bigscreen and not mirror %}
	<nav class="navigation">
		<ul>
			<li><a href="/">Home</a></li>
			<li><a href="/?session=2017-10-28">Laatste sessie</a></li>
			<li><a href="/songs">Songs</a></li>
		</ul>
	</nav>
{% /if %}

{% if not mirror %}
	{% with players as player where player.rank eq 1 %}
		{% each %}
			<h1 class="pacifico">ğŸ† {%= player.name %} staat op Ã©Ã©n met een UltraStar-score van {%= player.average %}!</h1>
		{% /each %}
	{% /with %}
{% /if %}

<div class="board">
	<% if (mirror) $0.classList.add('mirror') %>
	<% if (bigscreen) $0.classList.add('bigscreen') %>

	<table class="top-5">
		<thead>
			<tr>
				<th></th>
				<th></th>
				<th>AVERAGE</th>
				<th>SONGS</th>
				<th>MAX</th>
				<th>MIN</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% with players as player where player.rank lt 5 %}
				{% each %}
					<tr class="ranking">
						<td class="rank"><span>{%= player.rank %}</span></td>
						<td class="pacifico player-name" >{%= player.name %}</td>
						<td>{%= player.average %}</td>
						<td>{%= player.scores.length %}</td>
						<td>{%= player.max %}</td>
						<td>{%= player.min %}</td>
					</tr>
					<tr class="extra">
						<td>
						</td>
						<td colspan="5" class="small">
							<div class="row">
								<div title=<% player.last.format('Y-m-d H:i:s') %>>
									{%= player.last.timeAgo() %}
								</div>
								<div class="songs">
									ğŸ‘ {%= player.max_song.Title %} â€“ {%= player.max_song.Artist %}
									<br>
									ğŸ‘ {%= player.min_song.Title %} â€“ {%= player.min_song.Artist %}
								</div>
							</div>
						</td>
					</tr>
				{% /each %}
			{% /with %}
		</tbody>
	</table>

	{% with players as player where player.rank gt 4 and player.rank lt 9 %}
		{% all %}
			<table class="next-5">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th>AVERAGE</th>
						<th>SONGS</th>
						<th>MAX</th>
						<th>MIN</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
		{% /all %}
			
				{% each %}
					<tr class="ranking">
						<td class="rank"><span>{%= player.rank %}</span></td>
						<td class="pacifico player-name">{%= player.name %}</td>
						<td>{%= player.average %}</td>
						<td>{%= player.scores.length %}</td>
						<td>{%= player.max %}</td>
						<td>{%= player.min %}</td>
					</tr>
					<tr class="extra">
						<td>
						</td>
						<td colspan="5" class="small">
							<div class="row">
								<div title=<% player.last.format('Y-m-d H:i:s') %>>
									{%= player.last.timeAgo() %}
								</div>
								<div class="songs">
									ğŸ‘ {%= player.max_song.Title %} â€“ {%= player.max_song.Artist %}
									<br>
									ğŸ‘ {%= player.min_song.Title %} â€“ {%= player.min_song.Artist %}
								</div>
							</div>
						</td>
					</tr>
				{% /each %}

		{% all %}
				</tbody>
			</table>
		{% /all %}
	{% /with %}
</div>

<% end('main') %>