<% expands('layouts/body'); %>

<% start('main') %>

{% if not bigscreen %}
	<nav class="navigation">
		<ul>
			<li><a href="/">Home</a></li>
			<li><a href="/?session=2017-10-28">Laatste sessie</a></li>
			<li><a href="/songs">Songs</a></li>
		</ul>
	</nav>
{% /if %}

{% with players as player where player.rank eq 1 %}
	{% each %}
		<h1 class="pacifico">🏆 {%= player.name %} staat op één met een UltraStar-score van {%= player.average %}!</h1>
	{% /each %}
{% /with %}

<div class="board">

	<table>
		<thead>
			<tr>
				<th></th>
				<th></th>
				<th>AVERAGE</th>
				<th>SONGS</th>
				<th>MAX</th>
				<th>MIN</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% with players as player where player.rank lt 6 %}
				{% each %}
					<tr>
						<td class="rank"><span>{%= player.rank %}</span></td>
						<td class="pacifico player-name" >{%= player.name %}</td>
						<td>{%= player.average %}</td>
						<td>{%= player.scores.length %}</td>
						<td>{%= player.max %}</td>
						<td>{%= player.min %}</td>
					</tr>
					<tr>
						<td>
						</td>
						<td colspan="5" class="small">
							<div class="row">
								<div title=<% player.last.format('Y-m-d H:i:s') %>>
									{%= player.last.timeAgo() %}
								</div>
								<div class="songs">
									👍 {%= player.max_song.Title %} – {%= player.max_song.Artist %}
									<br>
									👎 {%= player.min_song.Title %} – {%= player.min_song.Artist %}
								</div>
							</div>
						</td>
					</tr>
				{% /each %}
			{% /with %}
		</tbody>
	</table>

	<table>
		<thead>
			<tr>
				<th></th>
				<th></th>
				<th>AVERAGE</th>
				<th>SONGS</th>
				<th>MAX</th>
				<th>MIN</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% with players as player where player.rank gt 5 and player.rank lt 11 %}
				{% each %}
					<tr>
						<td class="rank"><span>{%= player.rank %}</span></td>
						<td class="pacifico player-name">{%= player.name %}</td>
						<td>{%= player.average %}</td>
						<td>{%= player.scores.length %}</td>
						<td>{%= player.max %}</td>
						<td>{%= player.min %}</td>
					</tr>
					<tr>
						<td>
						</td>
						<td colspan="5" class="small">
							<div class="row">
								<div title=<% player.last.format('Y-m-d H:i:s') %>>
									{%= player.last.timeAgo() %}
								</div>
								<div class="songs">
									👍 {%= player.max_song.Title %} – {%= player.max_song.Artist %}
									<br>
									👎 {%= player.min_song.Title %} – {%= player.min_song.Artist %}
								</div>
							</div>
						</td>
					</tr>
				{% /each %}
			{% /with %}
		</tbody>
	</table>
</div>

<% end('main') %>